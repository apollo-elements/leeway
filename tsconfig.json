{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2019",
    "moduleResolution": "Node",
    "module": "es2020",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "downlevelIteration": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2017"
    ]
  }
}
