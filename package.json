{
  "name": "leeway",
  "version": "1.0.0",
  "description": "Where work is avoided.",
  "main": "index.js",
  "engines": {
    "node": "10.3.0"
  },
  "scripts": {
    "prebuild": "npm dedupe",
    "build": "run-s build:*",
    "build:copy": "cp src/index.html public && cp src/manifest.webmanifest public && cp src/style.css public && cp -r node_modules/@webcomponents public/assets",
    "build:rollup": "rollup -c",
    "patch": "patch-package",
    "postinstall": "npm run patch",
    "start": "node index.js",
    "watch": "run-p watch:*",
    "watch:client": "nodemon -x 'npm run build:copy' --config client.nodemon.json",
    "watch:rollup": "rollup -c -w",
    "watch:server": "nodemon -x 'heroku local' --signal SIGTERM --config server.nodemon.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo-elements/lit-apollo": "^0.0.7",
    "@material/mwc-button": "^0.3.6",
    "apollo-cache-inmemory": "^1.4.3",
    "apollo-cache-persist": "^0.1.1",
    "apollo-client": "^2.4.13",
    "apollo-link-http": "^1.5.11",
    "apollo-link-schema": "^1.1.6",
    "apollo-link-state": "^0.4.2",
    "apollo-link-ws": "^1.0.14",
    "apollo-server": "^2.4.0",
    "compression": "^1.7.3",
    "date-fns": "^2.0.0-alpha.27",
    "emoji-favicon": "^0.3.0",
    "esm": "^3.2.4",
    "express": "^4.16.4",
    "express-sslify": "^1.2.0",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.1",
    "ioredis": "^4.6.2",
    "jsdom": "^13.2.0",
    "lit-element": "^2.0.1",
    "lit-html": "^1.0.0",
    "subscriptions-transport-ws": "^0.9.15"
  },
  "devDependencies": {
    "@types/ioredis": "^4.0.6",
    "@webcomponents/webcomponentsjs": "^2.2.7",
    "chokidar": "^2.1.1",
    "eslint": "^5.13.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.0.2",
    "rollup": "^1.1.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-graphql": "^0.1.0",
    "rollup-plugin-lit-css": "^1.0.1",
    "rollup-plugin-minify-html-literals": "^1.2.2",
    "rollup-plugin-modulepreload": "^1.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-notify": "^1.0.6",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-workbox": "^2.0.0"
  }
}
