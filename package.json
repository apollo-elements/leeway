{
  "name": "leeway",
  "version": "1.0.0",
  "description": "Where work is avoided.",
  "private": true,
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": "16.x"
  },
  "heroku-run-build-script": true,
  "scripts": {
    "build": "npx run-s build:*",
    "build:rollup": "rollup -c",
    "patch": "npx patch-package",
    "postinstall": "npm dedupe && npm run patch",
    "lint": "npx run-s lint:*",
    "lint:client": "npx eslint src",
    "lint:server": "npx eslint graphql",
    "start": "node ./graphql/app.js",
    "watch": "npx run-p watch:*",
    "watch:rollup": "npx rollup -c -w",
    "watch:heroku": "npx nodemon -x 'heroku local' --signal SIGTERM --config server.nodemon.json"
  },
  "author": "Benny Powers <web@bennypowers.com>",
  "license": "ISC",
  "dependencies": {
    "@apollo-elements/components": "^2.0.0-next.3",
