    "chokidar": "^3.5.2",
    "eslint": "^7.28.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "rollup": "^2.52.2",
    "rollup-plugin-license": "^2.5.0",
    "rollup-plugin-lit-css": "^2.1.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-modulepreload": "^1.2.3",
